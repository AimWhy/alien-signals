{
	"name": "alien-signals",
	"version": "0.2.2",
	"license": "MIT",
	"packageManager": "pnpm@9.12.0",
	"type": "commonjs",
	"types": "./types/index.d.ts",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./esm/index.mjs",
			"require": "./cjs/index.js"
		},
		"./cjs": {
			"types": "./types/index.d.ts",
			"import": "./cjs/index.js",
			"require": "./cjs/index.js"
		},
		"./esm": {
			"types": "./types/index.d.ts",
			"import": "./esm/index.mjs",
			"require": "./esm/index.mjs"
		}
	},
	"files": [
		"**/*.js",
		"**/*.mjs",
		"**/*.d.ts"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/johnsoncodehk/signals.git"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"build": "tsc && npm run build:esm && npm run build:cjs",
		"build:esm": "esbuild src/index.ts --bundle --format=esm --outfile=esm/index.mjs",
		"build:cjs": "esbuild src/index.ts --bundle --format=cjs --outfile=cjs/index.js",
		"test": "vitest run"
	},
	"devDependencies": {
		"esbuild": "latest",
		"vite": "latest",
		"vitest": "latest",
		"typescript": "latest"
	}
}
